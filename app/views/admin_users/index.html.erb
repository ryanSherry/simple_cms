<% @page_title = "All Admin Users" %>

<div class="admin_users index">
  <h2>Admin Users</h2>

  <%= link_to("Add New Admin User", new_admin_user_path, :class => 'action new') %>

  <table class="listing" summary="Page list">
    <tr class="header">
      <th>Full Name</th>
      <th>Email</th>
      <th>UserName</th>
    </tr>
    <% @adminusers.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td class="actions">
          <%= link_to("Edit", edit_admin_user_path(user), :class => 'action edit') %>
          <%= link_to("Delete", delete_admin_user_path(user), :class => 'action delete') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
